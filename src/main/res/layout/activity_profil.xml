<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="700sp"
        android:layout_height="300dp"
        android:layout_marginBottom="656dp"
        android:background="@drawable/profil"/>

    <ImageView
        android:id="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="-67dp"
        android:src="@drawable/profill" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil"
        android:layout_centerHorizontal="true"
        android:text="Rivanda"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="25dp"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_below="@id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Rivanda@gmail.com"/>
    <Button
        android:id="@+id/setting"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="28dp"
        android:text="Setting"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/setting"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/help"
        android:layout_below="@id/setting"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="20dp"
        android:text="Help"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/help"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/feedback"
        android:layout_below="@id/help"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="20dp"
        android:text="Feedback"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/feedback"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/language"
        android:layout_below="@id/feedback"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="20dp"
        android:text="Language"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/language"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/about"
        android:layout_below="@id/language"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="20dp"
        android:text="About"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/about"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/logout"
        android:layout_below="@id/about"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:layout_marginTop="20dp"
        android:text="Log Out"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="14dp"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/logout"
        android:paddingHorizontal="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigasi"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bar"
        app:itemTextColor="@drawable/pilih"
        android:background="@drawable/navigasi"
        android:layout_height="wrap_content"/>
</RelativeLayout>
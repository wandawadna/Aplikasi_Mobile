<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back,"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="22dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="29dp"/>
    <TextView
        android:id="@+id/loginnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="29dp"
        android:text="Log in now to continue"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:id="@+id/gss"
        android:layout_width="600sp"
        android:layout_height="300dp"
        android:src="@drawable/gss"
        android:layout_below="@id/loginnow"/>
    <TextView
        android:id="@+id/email1"
        android:layout_below="@id/gss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12dp"
        android:textColor="@color/bubu"
        android:layout_marginLeft="45dp"/>
    <EditText
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email1"
        android:drawablePadding="8dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/email"
        android:hint="Enter your email address"
        android:fontFamily="@font/poppinsregular"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/abulagi"
        android:textColorHighlight="@color/cardview_dark_background"/>
    <TextView
        android:id="@+id/password"
        android:layout_below="@id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12dp"
        android:textColor="@color/bubu"
        android:layout_marginLeft="45dp"/>

    <EditText
        android:id="@+id/passwordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/abulagi"
        android:textColorHighlight="@color/cardview_dark_background"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/fp"
        android:layout_below="@id/passwordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="12dp"
        android:textColor="@color/hitam"/>
    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/fp"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:background="@drawable/button_shape"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:onClick="profil"/>
    <TextView
        android:id="@+id/nanya1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogIn"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        android:text="Don't have an account?"
        android:textColor="@color/semihitam"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nanya1"
        android:text="Sign Up"
        android:id="@+id/signUP"
        android:layout_marginTop="770dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/semihitam"
        android:fontFamily="@font/poppinsbold"
        android:textSize="14dp"
        android:onClick="registrasi"/>
</RelativeLayout>